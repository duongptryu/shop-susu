    <main>
      <h2 style="text-align: center;">Update Page</h2>
        <div class="container">
        <form {{#if routerImport}}action="/import/update"{{/if}}{{#if routerExport}}action="/export/update"{{/if}} method="POST">
          {{#each data}}
            <div class="form-row">
              <div class="form-group col-md-5">
                <label for="inputEmail4">Name Customer</label>
                <input type="text" class="form-control" id="inputEmail4" name="name" value="{{this.name}}">
              </div>
              <div class="form-group col-md-5">
                <label for="inputPassword4">Telenumber</label>
                <input type="tel" class="form-control" id="inputPassword4" name="phone" maxlength="11" value="{{this.phone}}">
              </div>
              <div class="form-group col-md-2">
                <input type="text" class="form-control" id="inputEmail4" name="idCustomer" value="{{this._id}}" hidden>
              </div>
            </div>
            <div class="form-group">
              <label for="inputAddress">Toy Code</label>
              <input type="text" class="form-control" id="inputAddress" name="address" value="{{this.address}}">
            </div>
            <div class="form-group ">
              <label for="inputAddress2">Price - VNƒê</label>
              <input type="number" step=any class="form-control" id="inputAddress2" name="price" value="{{this.price}}">
            </div>
            <div class="form-row">
              <div class="form-group col-md-6">
                <label for="inputCity">Amount</label>
                <input type="number" class="form-control" id="inputCity" name="amount" value="{{this.amount}}">
              </div>
              <div class="form-group col-md-4">
                <label for="inputState">Paid</label>
                <select id="inputState" class="form-control" name="paid" value="{{this.paid}}">
                  <option selected value="no">No</option>
                  <option value="yes">Yes</option>
                </select>
              </div>
            </div>
            <div class="form-row">
              <div class="form-group col-md-2">
                <label for="inputCity">Select date</label>
                <input type="date" class="form-control" id="inputCity" name="date" min="2020-06-01" value="{{this.date}}">
              </div>
            </div>
            {{/each}}
            <button type="submit" class="btn btn-primary">Update</button>
          </form>
        </div>     
    </main>
 